<!-- @format -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Lego Collection</title>
    <link rel="stylesheet" href="/css/main.css" />
  </head>

  <body tabindex="-1">
    <%- include('partials/navbar', {page: ''}) %>

    <br />

    <div class="container mx-auto">
      <div class="hero bg-base-200 rounded-lg p-6">
        <div class="hero-content text-center">
          <div class="max-w-md">
            <h1 class="text-5xl font-bold">Welcome</h1>

            <p class="py-6">
              Let your inner builder go and take a captivating trip through the vibrant world of Lego.
            </p>

            <a href="/lego/sets" class="btn btn-primary">Get Started Now</a>
          </div>
        </div>
      </div>

      <br />

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        <div>
          <div class="card bg-base-100 shadow-xl">
            <figure>
              <img
                class="w-full"
                src="https://logos-world.net/wp-content/uploads/2020/09/LEGO-Logo.png"
                alt="Lego set"
              />
            </figure>
            <div class="card-body">
              <h2 class="card-title">Gears</h2>
              <p>
                This set was released in America by Samsonite in 1965.
              </p>
              <div class="card-actions justify-end">
                <a href="/lego/sets/003-1" class="btn btn-primary">View</a>
              </div>
            </div>
          </div>
        </div>
        <div>
          <div class="card bg-base-100 shadow-xl">
            <figure>
              <img
                class="w-full"
                src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTJ6pXQiko_U4MqBzuD-vh3Vo6OJmUA7K3jlA&usqp=CAU"
                alt="Lego Set"
              />
            </figure>
            <div class="card-body">
              <h2 class="card-title">Nursery Furniture</h2>
              <p>Classic Duplo set - create a nursery for your minis.</p>
              <div class="card-actions justify-end">
                <a href="/lego/sets/005-2" class="btn btn-primary">View</a>
              </div>
            </div>
          </div>
        </div>
        <div>
          <div class="card bg-base-100 shadow-xl">
            <figure>
              <img
                class="w-full"
                src="https://www.google.com/url?sa=i&url=https%3A%2F%2Fstock.adobe.com%2Fsearch%3Fk%3Dlego&psig=AOvVaw0iHIZ98hEaMdpVUWv0CDR1&ust=1701402424621000&source=images&cd=vfe&ved=0CBIQjRxqFwoTCICQ54zo6oIDFQAAAAAdAAAAABAE"
                alt="Lego Set"
              />
            </figure>
            <div class="card-body">
              <h2 class="card-title">The Race to Build It Board Game</h2>
              <p>Classic game - released in 1999</p>
              <div class="card-actions justify-end">
                <a href="/lego/sets/010-3" class="btn btn-primary">View</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
